{
	"name": "atums.status",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bun run dev:api & bun run dev:web",
		"dev:api": "bun --watch run src/api/index.ts",
		"dev:web": "bunx vite dev",
		"build": "bun run scripts/build.ts",
		"preview": "bunx vite preview",
		"start": "bun run start:api & bun run start:web",
		"start:api": "bun run src/api/index.ts",
		"start:web": "bun run build/index.js",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"cleanup": "rm -rf logs node_modules bun.lock"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.3",
		"@sveltejs/kit": "^2.53.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/bun": "^1.3.9",
		"@types/nodemailer": "^7.0.11",
		"eslint": "^9.39.3",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^16.5.0",
		"svelte": "^5.53.3",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.4.3",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.1",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@atums/echo": "^2.0.3",
		"nodemailer": "^7.0.13"
	}
}
