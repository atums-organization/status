	{
		"category": "authentication",
		"routes": [
			{
				"method": "POST",
				"path": "/auth/login",
				"desc": "login with username/email and password",
				"request": "{\n  \"username\": \"user@example.com\",\n  \"password\": \"password123\"\n}",
				"response": "{\n  \"success\": true,\n  \"data\": {\n    \"user\": {\n      \"id\": \"uuid\",\n      \"username\": \"user\",\n      \"email\": \"user@example.com\",\n      \"role\": \"user\",\n      \"createdAt\": \"2025-01-01T00:00:00.000Z\"\n    },\n    \"sessionId\": \"uuid\"\n  }\n}"
			},
			{
				"method": "POST",
				"path": "/auth/register",
				"desc": "register a new user (requires invite code)",
				"request": "{\n  \"username\": \"newuser\",\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"inviteCode\": \"ABC123\"\n}",
				"response": "{\n  \"success\": true,\n  \"data\": {\n    \"user\": {\n      \"id\": \"uuid\",\n      \"username\": \"newuser\",\n      \"email\": \"newuser@example.com\",\n      \"role\": \"user\",\n      \"createdAt\": \"2025-01-01T00:00:00.000Z\"\n    },\n    \"sessionId\": \"uuid\"\n  }\n}"
			},
			{
				"method": "GET",
				"path": "/auth/first-user",
				"desc": "check if this is the first user (no invite needed)",
				"response": "{\n  \"success\": true,\n  \"data\": { \"isFirstUser\": true }\n}"
			},
			{
				"method": "GET",
				"path": "/auth/user/:id",
				"desc": "get user by id",
				"scopes": ["session"],
				"response": "{\n  \"success\": true,\n  \"data\": {\n    \"user\": {\n      \"id\": \"uuid\",\n      \"username\": \"user\",\n      \"email\": \"user@example.com\",\n      \"role\": \"admin\",\n      \"createdAt\": \"2025-01-01T00:00:00.000Z\"\n    }\n  }\n}"
			},
			{
				"method": "PUT",
				"path": "/auth/user/:id/password",
				"desc": "change user password",
				"scopes": ["session"],
				"request": "{\n  \"currentPassword\": \"oldpass\",\n  \"newPassword\": \"newpass123\"\n}",
				"response": "{\n  \"success\": true,\n  \"data\": { \"message\": \"Password updated\" }\n}"
			}
		]
	},
